<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".activity.ScoreResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/appbar_menu_score_result"
        android:theme="@style/AppTheme2.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_score_result"
            app:titleTextColor="@color/white"
            app:theme="@style/ToolbarStyle"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/AppTheme2.PopupOverlay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/appbar_menu_score_result"
        android:background="@drawable/dashboard_background"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Player Details"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Name :"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sr_plyr_name"
                                style="@style/TitleTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textStyle="bold"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Age :"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_plyr_age"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp"
                                    style="@style/TitleTextStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:text="Group:"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_plyr_goup"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Gender:"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_plyr_gender"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:background="@color/colorAccent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Judge Score"
                                android:textColor="@color/white"
                                style="@style/viewParent.headerText"
                                android:textSize="20sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="A"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_sr_a_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_sr_a"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="B"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_sr_b_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_sr_b"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="C"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_sr_c_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_sr_c"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:id="@+id/linear_questions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Combination"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="1.60*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_comb"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:maxLength="4"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Difficulty"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="3.80*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_diff_comb"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:maxLength="4"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Execution"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="4.40*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_exc"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Originality"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="0.20*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_orig"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:textSize="20sp"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Total Score"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:textSize="20sp"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="10.00*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_final_value"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:textSize="20sp"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/table_drawable">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:padding="3dp"
                                    android:text="Comment :"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_sr_comment"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_edit_score"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:layout_gravity="right"
                            android:layout_margin="15dp"
                            android:background="@drawable/button_background"
                            android:text="Edit Score" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:visibility="gone"
                    android:id="@+id/card_judge_score"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Judge Scores"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/iv_refesh_scoreform"
                                android:src="@drawable/ic_refresh"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content"
                                app:tint="@color/white" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/linear_all_judge"
                            android:orientation="vertical"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>