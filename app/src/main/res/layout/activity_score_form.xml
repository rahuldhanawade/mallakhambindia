<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".activity.ScoreForm">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/appbar_menu_score"
        android:theme="@style/AppTheme2.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_score_form"
            app:titleTextColor="@color/white"
            app:theme="@style/ToolbarStyle"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/AppTheme2.PopupOverlay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/appbar_menu_score"
        android:background="@drawable/dashboard_background"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Player Details"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Name :"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_plyr_name"
                                style="@style/TitleTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:textColor="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Age :"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_plyr_age"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:text="Group:"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_plyr_goup"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Gender:"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_plyr_gender"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TitleTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fill Score"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="A"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_a_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <ImageView
                                            android:id="@+id/iv_a_minus"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_remove" />

                                        <TextView
                                            android:id="@+id/tv_a"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:id="@+id/iv_a_add"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_add" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="B"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_b_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <ImageView
                                            android:id="@+id/iv_b_minus"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_remove" />

                                        <TextView
                                            android:id="@+id/tv_b"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:id="@+id/iv_b_add"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_add" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable"
                                            android:padding="3dp"
                                            android:text="C"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_c_marks"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/table_drawable_orange"
                                            android:gravity="center"
                                            android:padding="3dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:background="@drawable/table_drawable_orange"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <ImageView
                                            android:id="@+id/iv_c_minus"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_remove" />

                                        <TextView
                                            android:id="@+id/tv_c"
                                            style="@style/TitleTextStyle"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:minHeight="20dp"
                                            android:padding="3dp"
                                            android:text="0"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:id="@+id/iv_c_add"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:elevation="3dp"
                                            android:minHeight="20dp"
                                            android:src="@drawable/ic_add" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:id="@+id/linear_questions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/colorAccent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Combination"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="1.60*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_comb"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:maxLength="4"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Difficulty"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="3.80*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_diff_comb"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:maxLength="4"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="8dp"
                                    android:text="Execution"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="4.40*"
                                    android:textStyle="bold" />


                                <EditText
                                    android:id="@+id/edt_exec"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:digits="0123456789."
                                    android:gravity="center"
                                    android:hint="1.23"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:padding="8dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="8dp"
                                    android:text="Originality"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="0.20*"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edt_orig"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:text="0.0"
                                    android:enabled="false"
                                    android:background="@drawable/table_drawable"
                                    android:digits="0123456789."
                                    android:gravity="center"
                                    android:hint="1.23"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:padding="8dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="6"
                                    android:background="@drawable/table_drawable"
                                    android:padding="3dp"
                                    android:text="Total Score"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="10.00*"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_final_value"
                                    style="@style/TitleTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="2"
                                    android:background="@drawable/table_drawable"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/table_drawable"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <EditText
                                android:id="@+id/edt_comments"
                                style="@style/TitleTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="4"
                                android:background="@color/white"
                                android:gravity="center"
                                android:hint="Comment"
                                android:minHeight="100dp"
                                android:padding="3dp"
                                android:scrollIndicators="right" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_record"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_mic"
                                    app:tint="@color/colorAccent" />

                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Submit"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>